@{
	Layout = "_Admin";
}
@model AllModels
<section class="adminRegions section--dark">
    <div class="container-fluid">
        <form method="post" class="formForAdmin" asp-action="createCatalog" asp-controller="Admin">
            <h2>Добавить в каталог</h2>
            <div class="form-group">
                <input type="text" name="regionPhoto" required placeholder="Добавьте ссылку на фото региона">
            </div>
            <div class="form-group">
                <input type="text" name="regionName" required placeholder="Имя региона">
            </div>
            <div class="form-group">
                <input type="number" name="regionSquare" required placeholder="Площадь региона">
            </div>
            <div class="form-group">
                <input type="number" name="regionPrice" required placeholder="Цена региона">
            </div>
            <h3>Выберите услуги (можно и позже)</h3>
            @foreach (var s in Model.Services)
           {
                <div class="form-check">
                    <input type="checkbox" name="ServiceId" value="@s.Id" id="@s.Title"> <label for="@s.Title">@s.Title</label>
                </div>
           }
            <div class="btn-wrapper">
                <input type="submit" value="Добавить в каталог" class="btn btn-primary">
            </div>
        </form>
        <table class="adminTable">
            <tr>
                <th>ID региона</th>
                <th>Фото региона</th>
                <th>Имя региона</th>
                <th>Площадь региона</th>
                <th>Цена региона</th>
                <th>Действия</th>
            </tr>
            @foreach (var r in Model.Regions)
            {
                <tr>
					<td>@r.Id</td>
					<td>@r.Photo</td>
					<td>@r.Name</td>
					<td>@r.Square</td>
					<td>@r.Price</td>
					<td>
						<div class="adminActions">
							<a href="detailsRegion/@r.Id">Детали</a>
							<a href="editRegion/@r.Id">Редактировать</a>
							<a href="deleteRegion/@r.Id">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</section>