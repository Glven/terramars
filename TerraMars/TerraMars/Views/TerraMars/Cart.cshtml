@{
    Layout = "_Layout";
    ViewBag.Title = "Корзина";
}
@model AllModels
<section class="section section--dark cart">
    <div class="container">
        <div class="cart-wrapper">
        <div class="cart-card">
            <h2 class="table">Номер заказа</h2>
            <p class="table">Имя участка</p>
            <p class="table">Площадь участка</p>
            <span class="table">Цена участка</span>
        </div>
        @foreach (var c in Model.Carts)
       {
          <div class="cart-card">
            <h2 class="cart-card__elem cart-card__number">@c.Id</h2>
            <p class="cart-card__elem cart-card__name">@c.Region.Name</p>
            <p class="cart-card__elem cart-card__square">@c.Region.Square км</p>
            <span class="cart-card__elem cart-card__price">@c.Region.Price</span>
        </div>
       }
        </div>
        <!-- /.cart-wrapper -->
        <a href="#" class="btn btn-primary cart-btn">Купить</a>
    </div>
    <!-- /.container -->
</section>
<!-- /.section section--dark cart -->