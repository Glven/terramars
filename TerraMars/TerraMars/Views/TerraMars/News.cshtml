@{
    Layout = "_Layout";
}
@model AllModels
<section class="section section--dark news">
    <div class="container">
        <h1 class="news-title">Новости</h1>
        <div class="news-wrapper">
            @foreach (var n in Model.News)
           {
               <div class="news-card">
                    <div class="row">
                        <div class="col-12 col-md-4 col-lg-3">
                            <div class="news-card__img">
                            <img src="@n.Photo" alt="paper">
                            </div>
                        </div>
                        <div class="col-12 col-md-8 col-lg-9">
                            <div class="news-card__info">
                            <h2>@n.Title</h2>
                            <p>@n.Content</p>
                            <span class="readmore">Читать далее</span>
                            </div>
                        </div>
                    </div>
                 </div>
           }
        </div>
        <!-- /.news-wrapper -->
    </div>
    <!-- /.container -->
</section>
<!-- /.section section--dark news -->